{
  "name": "danz-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "npm run build:docs && next build",
    "build:next": "next build",
    "build:docs": "cd docs && npm install && npm run build && mkdir -p ../public/docs && cp -r .vitepress/dist/* ../public/docs/",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@apollo/client": "3.13.8",
    "@privy-io/react-auth": "^3.0.0",
    "canvas-confetti": "^1.9.4",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "motion": "^12.23.12",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/fragment-matcher": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^5.0.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.5.0",
    "@types/react": "^19.1.13",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.1",
    "typescript": "^5"
  }
}
